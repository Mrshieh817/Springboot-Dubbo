<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<dubbo:application name="igxe-provider"/>
	<dubbo:registry address="zookeeper://172.16.13.37:2181"/>
    <dubbo:protocol name="dubbo" port="2080"/>
    <dubbo:protocol  name="rest" port="20660"   server="tomcat" accepts="5000" threads="1000"  />
	<dubbo:annotation package="com.xcf.IMP" />
	<dubbo:provider timeout="5000" />
	<!-- 具体的实现bean -->
    <bean id="ProviderServiceImpl" class="com.xcf.IMP.UserService" />
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.xcf.Interface.IuserService"    ref="ProviderServiceImpl"  protocol="dubbo,rest" />
	<!-- 采用直连，不使用注册中心 -->
<!--     <dubbo:registry address="N/A" /> -->
</beans>